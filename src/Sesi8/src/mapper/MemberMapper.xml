<?xml version="1.0" encoding="UTF-8" ?>
<mapper namespace="mapper.MemberMapper">

    <!-- Insert -->
    <insert id="insert" parameterType="Sesi8.src.model.Member">
        INSERT INTO member (id, nama, jenis_id)
        VALUES (#{id}, #{nama}, #{jenisId})
    </insert>

    <!-- Update -->
    <update id="update" parameterType="Sesi8.src.model.Member">
        UPDATE member
        SET nama = #{nama}, jenis_id = #{jenisId}
        WHERE id = #{id}
    </update>

    <!-- Delete -->
    <delete id="delete" parameterType="int">
        DELETE FROM member WHERE id = #{id}
    </delete>

    <!-- Find All -->
    <select id="findAll" resultType="Sesi8.src.model.Member">
        SELECT * FROM member
    </select>

</mapper>
